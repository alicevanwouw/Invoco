<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Portal</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Portal.styles.css" asp-append-version="true" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0&icon_names=phone_in_talk" />
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />


    <style>
        html, body {
            height: 100vh;
            margin: 0;
            overflow: hidden;
            display: flex;
            flex-direction: column;
        }

        .wrapper {
            display: flex;
            flex: 1;
            overflow: hidden;
        }

        .main-layout {
            display: flex;
            flex-direction: column;
            height: 100vh;
            width: 100vw;
            background-color: #f1f1f1;
        }

        .top-nav {
            background-color: #81abcd;
            padding: 0 1rem;
            display: flex;
            align-items: center;
        }

        .content-wrapper {
            flex-grow: 1;
            overflow: hidden;
            padding: 2rem 2.5rem;
            display: flex;
            flex-direction: column;
        }

        .footer {
            background-color: transparent;
            padding: 10px;
            text-align: center;
            width: 100%;
            line-height: 5rem !important;
            color: gray;
        }

        .logo-icon {
            color: white;
        }

        #page-description {
            color: white;
            font-weight: 700;
        }
    </style>

</head>
<body>

    <div class="wrapper">
      
        <div class="main-layout">

            <nav class="top-nav">
                <div class="d-flex align-items-center gap-2">
                    <span class="material-symbols-outlined logo-icon">phone_in_talk</span>
                    <h5 class="ms-3 mt-1" id="page-description">INVOCO TELECOM</h5>
                </div>
            </nav>

            <div class="content-wrapper">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>

            <footer class="footer">
                2025 - Invoco Assesment
            </footer>

        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


